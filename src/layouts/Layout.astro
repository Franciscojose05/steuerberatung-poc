---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Steuerberatung - Kompetent und zuverlÃ¤ssig" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
		<title>{title}</title>
		<style>
			:root {
				--accent: #0066cc;
				--accent-dark: #004d99;
				--gray: #f4f4f5;
				--gray-dark: #27272a;
			}
			* {
				box-sizing: border-box;
			}
			html {
				font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
				background: white;
				color: var(--gray-dark);
			}
			body {
				margin: 0;
				padding: 0;
			}
			header {
				background: var(--accent);
				color: white;
				padding: 2rem;
				text-align: center;
			}
			header h1 {
				margin: 0;
				font-size: 2rem;
			}
			nav {
				background: var(--gray);
				padding: 1rem;
				text-align: center;
			}
			nav a {
				margin: 0 1rem;
				color: var(--gray-dark);
				text-decoration: none;
				font-weight: 500;
			}
			nav a:hover {
				color: var(--accent);
			}
			main {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2rem;
			}
			footer {
				background: var(--gray);
				text-align: center;
				padding: 2rem;
				margin-top: 4rem;
			}
		</style>
	</head>
	<body>
		<header>
			<h1>Steuerberatung</h1>
			<p>Ihre kompetente Partnerin in Steuerfragen</p>
		</header>
		<nav>
			<a href="/">Startseite</a>
			<a href="/leistungen">Leistungen</a>
			<a href="/blog">Aktuelles</a>
			<a href="/kontakt">Kontakt</a>
		</nav>
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; 2025 Steuerberatung | Alle Rechte vorbehalten</p>
		</footer>

		<script is:inline>
			if (window.netlifyIdentity) {
				window.netlifyIdentity.on("init", user => {
					if (!user) {
						window.netlifyIdentity.on("login", () => {
							document.location.href = "/admin/";
						});
					}
				});
			}
		</script>
	</body>
</html>
