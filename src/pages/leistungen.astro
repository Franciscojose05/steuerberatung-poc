---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';

const servicesData = await getEntry('pages', 'services');
const services = servicesData?.data.services_list || [];
---

<Layout title="Leistungen - Steuerberatung">
	<h1>{servicesData?.data.title || 'Unsere Leistungen'}</h1>

	<div class="services-grid">
		{services.map((service: any) => (
			<div class="service-card">
				<div class="icon">{service.icon}</div>
				<h2>{service.title}</h2>
				<p>{service.description}</p>
			</div>
		))}
	</div>

	<div class="contact-cta">
		<h2>Haben Sie Fragen?</h2>
		<p>Kontaktieren Sie mich gerne für ein unverbindliches Erstgespräch.</p>
		<a href="/kontakt" class="button">Termin vereinbaren</a>
	</div>
</Layout>

<style>
	h1 {
		color: #0066cc;
		text-align: center;
		margin-bottom: 3rem;
	}
	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}
	.service-card {
		background: white;
		border: 1px solid #e5e7eb;
		border-radius: 8px;
		padding: 2rem;
		text-align: center;
		transition: transform 0.3s, box-shadow 0.3s;
	}
	.service-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
	}
	.icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}
	.service-card h2 {
		color: #27272a;
		font-size: 1.5rem;
		margin: 0 0 1rem 0;
	}
	.service-card p {
		color: #71717a;
		line-height: 1.6;
	}
	.contact-cta {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		text-align: center;
		padding: 3rem 2rem;
		border-radius: 8px;
		margin-top: 4rem;
	}
	.contact-cta h2 {
		margin-top: 0;
	}
	.button {
		display: inline-block;
		background: white;
		color: #667eea;
		padding: 0.75rem 2rem;
		border-radius: 4px;
		text-decoration: none;
		font-weight: 600;
		transition: background 0.3s;
	}
	.button:hover {
		background: #f4f4f5;
	}
</style>
